@model IEnumerable<CanteenSystem.Web.Models.User>

@{ ViewData["Title"] = @ViewBag.Title; }

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">

                <a class="btn btn-block btn-outline-info btn-sm" style="width: 100px;" asp-action="Create">
                    Create New
                </a>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RollNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Department)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RollNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td class="d-flex">
                    <a type="button" class="btn btn-warning btn-sm ml-2" asp-route-id="@item.Id" asp-action="Edit">
                        Edit
                    </a>
                    <a type="button" class="btn btn-info btn-sm ml-2" asp-route-id="@item.Id" asp-action="Details">
                        Details
                    </a>
                    <a type="button" class="btn btn-danger btn-sm ml-2" asp-route-id="@item.Id" asp-action="Delete">
                        Delete
                    </a>
                </td>
            </tr>}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>